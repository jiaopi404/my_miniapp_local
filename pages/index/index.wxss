/**index.wxss**/
.slides {
    height: 380rpx;
}

.slides image {
    width: 100%;
    height: 100%;
}
.grids {
    background-color: #fff;
    font-size: 28rpx;
    display: flex;
    flex-wrap: wrap;
    border-left: 1px solid #eee;
    border-bottom: 1px solid #eee;
}
.grids .item {
    display: flex;
    box-sizing: border-box;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 33.33%;
    height: 250rpx;
    border-right: 1px solid #eee;
    border-top: 1px solid #eee;
}
.grids .item image {
    width: 70rpx;
    height: 70rpx;
}
.grids .item text {
    margin-top: 30rpx;
    color: #888;
    font-size: 28rpx;
}
.links {
    display: flex;
}
.links .item {
    flex: 1;
}
.links .item image {
    width: 100%;
}